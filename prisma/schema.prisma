datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// TYPES
type Menus {
  menu   String
  link   String
}

type Columns {
  title   String
  menus   Menus[]
}

// type Sections {

// }




// ADMIN USER MODEL
model User {
  id       String  @id @map("_id")
  name     String
  email     String @unique
  role     String
  isAdmin  Boolean
  password String
}


// HEADER SECTION MODEL
model Header {
    id     String  @id @map("_id")
    title  String
    logo   String
    width  String
    height String
    menus  Menus[]
}

// FOOTER SECTION MODEL
model Footer {
    id      String  @id @map("_id")
    title   String
    columns Columns[]
}

// ABOUT MALDVES SECTION MODEL
model AboutMaldives {
    id          String  @id @map("_id")
    title       String
    description String
}

// ABOUT US SECTION MODEL
model AboutUs {
    id          String  @id @map("_id")
    title       String
    description String
}

